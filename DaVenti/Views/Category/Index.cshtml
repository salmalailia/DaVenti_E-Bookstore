@model IEnumerable<DaVenti.Models.Category>

@{
    ViewBag.Title = "Category List";
}

<h2>Category List</h2>
<a class="btn btn-success pull-right" onclick="location.href='@Url.Action("Create")';return false;">Add New Category</a>
<table class="table table-striped table-hover">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name_category)
            </td>
            <td>
                <a class="btn btn-warning" onclick="location.href='@Url.Action("Edit", new { id = item.id_category })';return false;">Edit</a>
                <a class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new { id = item.id_category })';return false;">Delete</a>
            </td>
        </tr>
    }
</table>
